<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>eol-globi-parent</artifactId>
        <groupId>org.eol</groupId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../eol-globi-parent/pom.xml</relativePath>
    </parent>

    <artifactId>eol-globi-datasets</artifactId>

    <name>EOL's Global Biotic Interaction Datasets</name>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>eol-globi-data-tool</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!-- ensure that this doesn't run on travis -->
                    <skip>${skipTests}</skip>
                    <executable>java</executable>
                    <arguments>
                        <argument>-Xmx2G</argument>
                        <argument>-classpath</argument>
                        <classpath/>
                        <argument>org.eol.globi.tool.Normalizer</argument>
                    </arguments>
                    <workingDirectory>${project.build.directory}/data</workingDirectory>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <!-- ensure that this doesn't run on travis -->
                    <descriptors>
                        <descriptor>src/assembly/neo4j-graph-db.xml</descriptor>
                        <descriptor>src/assembly/darwin-core.xml</descriptor>
                        <!-- disabling automated owl export for now . . . 500 MB per dump causes bandwidth issues -->
                        <!--descriptor>src/assembly/owl.xml</descriptor-->
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>wagon-maven-plugin</artifactId>
                <version>1.0-beta-4</version>
                <configuration>
                    <serverId>aws-snapshot</serverId>
                    <url>s3://globi/snapshot</url>
                    <skip>${skipTests}</skip>
                    <includes>**/*Taxa.csv</includes>
                    <includes>**/*darwin*.tar.gz</includes>
                    <includes>**/*neo4j*.tar.gz</includes>
                </configuration>
                <executions>
                    <execution>
                        <id>upload-reports</id>
                        <phase>package</phase>
                        <goals>
                            <goal>upload</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
